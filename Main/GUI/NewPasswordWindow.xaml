<Window x:Class="Main.GUI.NewPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main.GUI"
        mc:Ignorable="d"
        Height="400" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="84.6"/>
            <RowDefinition Height="Auto" MinHeight="188"/>
            <RowDefinition Height="Auto" MinHeight="43.94"/>
        </Grid.RowDefinitions>

        <TextBlock Text="New Password" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,188" Grid.RowSpan="2" Width="136"/>
        <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="You have requested a password recovery, and a new password has been generated by the system. Please choose a new password." Grid.Row="0" FontSize="14" HorizontalAlignment="Left" Margin="37,39,0,10" Width="440" Height="39"/>

        <StackPanel Grid.Row="1" Margin="10,10,10,10">
            <Label Content="Password:"  FontSize="18" Height="35" Width="375"/>
            <TextBox x:Name="TextBoxNewPassword" Width="375" Height="39" FontSize="18"  Margin="0,10,0,0" VerticalContentAlignment="Center" Padding="5,0,0,0">
                <TextBox.Template>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>

            <Label Content="Confirm password:"  FontSize="18" Height="35" Width="375"/>
            <TextBox x:Name="TextBoxConfirmNewPassword" Width="375" Height="39" FontSize="18"  Margin="0,10,0,0" VerticalContentAlignment="Center" Padding="5,0,0,0">
                <TextBox.Template>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" CornerRadius="10">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>
        </StackPanel>

        <Button x:Name="ButtonConfirmNewPassword" Content="Confirm new password" HorizontalAlignment="Center" Height="40" Width="376" Grid.Row="2" Margin="0,10,0,10" Click="ButtonConfirmNewPassword_Click" Foreground="White" FontSize="18" Background="DeepSkyBlue">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" CornerRadius="5" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="DodgerBlue"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
